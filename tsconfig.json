{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "emitDeclarationOnly": true,
    "module": "esnext",
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "declaration": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@swan-form/*": ["packages/*"]
    }
  },
  "exclude": ["**/__tests__/**", "**/*.test.*"],
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx"]
}
