{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "nps dev.all",
    "dev:form": "nps dev.form",
    "precommit": "lint-staged",
    "format": "prettier --write '**/*.{json,js,css,md}'",
    "test": "jest --env=jsdom",
    "test:watch": "yarn run test -- --watch"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "2.8.0",
    "lint-staged": "^6.0.0",
    "nps": "^5.7.1",
    "nps-utils": "^1.5.0",
    "prettier": "^1.10.2"
  },
  "browserslist": {
    "development": ["last 2 chrome versions", "last 2 firefox versions", "last 2 edge versions"],
    "production": [">1%", "last 4 versions", "Firefox ESR", "ie > 10", "not ie < 11"]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "unmockedModulePathPatterns": ["react", "enzyme", "jest-enzyme"],
    "testMatch": ["*.test.js", "**/?(*.)(spec|test).js?(x)"],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": ["src/**/*.{js,jsx}", "!**/node_modules/**"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/exmaple/"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["yarn run format", "git add"]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "workspaces": ["packages/*"]
}
