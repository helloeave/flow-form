{
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "NODE_ENV=production yarn run clean && rollup -c",
    "clean": "rm -fR packages/slider/dist; rm -fR packages/field/dist; rm -fR packages/form/dist; rm -fR packages/helpers/dist",
    "postinstall": "yarn run build",
    "precommit": "lint-staged",
    "dev": "nps dev.all",
    "format": "prettier --write '**/*.{json,js,css,md,ts,tsx}'",
    "lint": "nps lint.all",
    "rollup": "rollup -c",
    "test": "jest",
    "test:watch": "yarn run test -- --watch",
    "type": "lerna run type"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.55",
    "@babel/core": "^7.0.0-beta.55",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.55",
    "@babel/plugin-proposal-decorators": "^7.0.0-rc.3",
    "@babel/plugin-proposal-export-default-from": "^7.0.0-beta.55",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@babel/preset-react": "^7.0.0-beta.55",
    "@babel/preset-stage-0": "^7.0.0-beta.55",
    "@babel/preset-typescript": "^7.0.0-beta.55",
    "@types/invariant": "^2.2.29",
    "@types/lodash": "^4.14.110",
    "@types/prop-types": "^15.5.4",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "autoprefixer": "^9.0.2",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^23.2.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "csstype": "^2.5.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-lerna": "^1.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-monorepo": "^0.2.0",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "jest-environment-jsdom": "23.4.0",
    "jest-enzyme": "^6.0.0",
    "lerna": "2.11.0",
    "lint-staged": "^7.0.0",
    "nps": "^5.7.1",
    "nps-utils": "^1.5.0",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.12.0",
    "rollup": "^0.63.5",
    "rollup-plugin-babel": "^4.0.0-beta.6",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "rollup-plugin-uglify": "^4.0.0",
    "typescript": "~2.8.4",
    "typescript-eslint-parser": "^18.0.0"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "ie > 9"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "yarn run format",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "workspaces": [
    "packages/*"
  ]
}
